<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EduticXamarin.Pages.Menu"
             Title="Menu"
             BackgroundColor="#8D6E63">
  <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
    
    <Image Source="imgautor.png"
           AbsoluteLayout.LayoutBounds="0.5,0.05,0.5,0.3"
           AbsoluteLayout.LayoutFlags="All"/>

    <Label x:Name="userMenuLabel"
           TextColor="White" HorizontalTextAlignment="Center"
           AbsoluteLayout.LayoutBounds="0.5,0.32,1,0.09"
           AbsoluteLayout.LayoutFlags="All"/>

    <Image Source="iconc.png"
           AbsoluteLayout.LayoutBounds="0.25,0.5,0.09,0.09"
           AbsoluteLayout.LayoutFlags="All"/>
    <Button x:Name="buscarMenu" Text="Buscar"
           TextColor="White" BackgroundColor="Transparent"
           AbsoluteLayout.LayoutBounds="0.5,0.5,0.3,0.09"
           AbsoluteLayout.LayoutFlags="All"/>
      
  </AbsoluteLayout>
</ContentPage>